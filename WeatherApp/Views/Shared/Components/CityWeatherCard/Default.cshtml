@model ICityWeather
@inject IRandomStyleService randomStyle;


<div class="card card-margin">
    <div class="card-header no-border">
        <h5 class="card-title">@Model.CityName</h5>
    </div>
    <div class="card-body pt-0">
        <div class="widget-49">
            <div class="widget-49-title-wrapper">
                <div class="@randomStyle.Get()">
                    <span class="widget-49-date-day">@(Model.TemperatureFahrenheit + "°F")</span>
                </div>
                <div class="widget-49-meeting-info">
                    <span class="widget-49-meeting-time">@Model.Time</span>
                    <span class="widget-49-pro-title">@Model.Date</span>
                </div>
            </div>
            <div class="widget-49-meeting-action">
                <a href="@(Url.Content(ViewBag.IsLinkToHome ? "~/" : $"~/weather/{Model.CityUniqueCode}"))"
                   class="btn btn-sm btn-flash-border-primary">@(ViewBag.IsLinkToHome ? "Back to Homepage" : "Details")</a>
            </div>
        </div>
    </div>
</div>
